from matplotlib.pyplot import *
C_N = open('Crank_Nicolson.txt')
T = []
U = numpy.zeros([21][11])

for line in C_N.readlines():
    temp = line.split(",")
    T.append(float(temp[0]))
    for i in range(len(temp-1)):
        U[line][i] = float(temp[i+1]))
C_N.close()

x = linspace(0,1,11)
plot(x,U[1,:])
